extends layouts/headerL
block content 
    style.
        *{
            margin:0;
            padding:0;
            box-sizing:border-box;
        }
        nav{
            background: #000;
        }
        body{
            background:#333;
        }
        form{
            width: 500px;
            height: 500px;
            margin: auto;
            margin-top: 100px;
            border: 1px solid #000;
            padding: 40px;
            box-shadow: 0 0 40px rgba(0,0,0,.3);
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        h3{
            text-align: center;
            margin-bottom: 50px;
            color: #fff;
        }
        input{
            display: block;
            border: 1px solid #000;
            margin: auto;
            padding: 10px;
            width: 100%;
            color: #fff;
        }
        .page-footer{
            margin-top: 65px;
            background: #000;
        }
        

    form(action="/sign" method="post") 
        h3 CREATE ACCOUNT
        input(type="text" name="name" placeholder="Name" required)
        input(type="text" name="password" placeholder="Password" required)
        input(type="submit" class="btn")
